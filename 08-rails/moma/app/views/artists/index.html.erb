<h1>Artists</h1>

<% @artists.each do |artist| %>
  <%= image_tag artist.image, :class => 'thumb' %>
  <ul>
    <li><%= link_to artist.name, artist %></li>
    <li><%= artist.nationality %></li>
    <li><%= artist.dob.strftime '%A %B %e, %Y' if artist.dob %></li>
    <li><%= artist.period %></li>
  </ul>
<% end %>
